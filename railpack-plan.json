{
  "php": "8.4",
  "node": "22",
  "composer": {
    "install": {
      "optimize-autoloader": true,
      "no-scripts": false,
      "no-interaction": true
    }
  },
  "build": [
    "npm install",
    "npm run build",
    "php artisan config:cache",
    "php artisan route:cache",
    "php artisan view:cache"
  ]
}
